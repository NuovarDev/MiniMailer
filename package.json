    "typescript": "^5.9.3"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "pino": "^10.3.1",
    "postal-mime": "^2.7.3",
    "smtp-server": "^3.18.1",
    "undici": "^7.22.0"
  }
}
